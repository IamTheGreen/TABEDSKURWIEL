<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/summary_filter"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fadingEdge="horizontal"
        app:cardBackgroundColor="@android:color/holo_blue_dark"
        app:cardCornerRadius="9dp"
        app:cardElevation="2dp"
        app:contentPadding="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:background="@color/cardview_light_background">

            <TextView
                android:id="@+id/summary_static_przejechane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="59dp"
                android:text="Przejechane"
                app:layout_constraintBottom_toBottomOf="@+id/summary_total_distance"
                app:layout_constraintHorizontal_bias="0.126"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/view7" />

            <TextView
                android:id="@+id/summary_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2550"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="?android:attr/colorPressedHighlight"
                android:textSize="56sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/view7"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/view7"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardview_shadow_start_color"
                app:layout_constraintLeft_toRightOf="@+id/summary_total_distance"
                app:layout_constraintRight_toLeftOf="@+id/summary_total_hours"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/summary_static_godzin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="58dp"
                android:text="Godzin"
                app:layout_constraintBottom_toBottomOf="@+id/summary_total_hours"
                app:layout_constraintHorizontal_bias="0.201"
                app:layout_constraintLeft_toRightOf="@+id/view7"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/summary_static_kilometrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:text="Kilometrów"
                app:layout_constraintHorizontal_bias="0.805"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/view7"
                app:layout_constraintTop_toTopOf="@+id/summary_total_distance" />

            <TextView
                android:id="@+id/summary_total_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2561"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="?android:attr/colorPressedHighlight"
                android:textSize="56sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/view7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/summary_total_distance" />

            <TextView
                android:id="@+id/summary_static_pracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:text="Pracy"
                app:layout_constraintHorizontal_bias="0.817"
                app:layout_constraintLeft_toRightOf="@+id/view7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/summary_total_hours" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/summary_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Podsumowanie"
            android:textAllCaps="false"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/cardview_light_background">

            <TextView
                android:id="@+id/summary_static_przejechane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="59dp"
                android:text="Przejechane"
                app:layout_constraintBottom_toBottomOf="@+id/summary_total_distance"
                app:layout_constraintHorizontal_bias="0.126"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/view7" />

            <TextView
                android:id="@+id/summary_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2550"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="?android:attr/colorPressedHighlight"
                android:textSize="56sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/view7"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/view7"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="@color/cardview_shadow_start_color"
                app:layout_constraintLeft_toRightOf="@+id/summary_total_distance"
                app:layout_constraintRight_toLeftOf="@+id/summary_total_hours"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/summary_static_godzin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="58dp"
                android:text="Godzin"
                app:layout_constraintBottom_toBottomOf="@+id/summary_total_hours"
                app:layout_constraintHorizontal_bias="0.201"
                app:layout_constraintLeft_toRightOf="@+id/view7"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/summary_static_kilometrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:text="Kilometrów"
                app:layout_constraintHorizontal_bias="0.805"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/view7"
                app:layout_constraintTop_toTopOf="@+id/summary_total_distance" />

            <TextView
                android:id="@+id/summary_total_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2561"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="?android:attr/colorPressedHighlight"
                android:textSize="56sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/view7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/summary_total_distance" />

            <TextView
                android:id="@+id/summary_static_pracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:text="Pracy"
                app:layout_constraintHorizontal_bias="0.817"
                app:layout_constraintLeft_toRightOf="@+id/view7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/summary_total_hours" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>